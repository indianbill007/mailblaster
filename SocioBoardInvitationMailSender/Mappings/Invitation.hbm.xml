<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping
      xmlns="urn:nhibernate-mapping-2.2"
      namespace="SocioBoardInvitationMailSender.Domain"
      assembly="SocioBoardInvitationMailSender">

  <class name="Invitation" table="Invitation" lazy="false">
    <id name="Id" column="Id">
      <generator class="identity"/>
    </id>
    <property name="InvitationBody">
      <column name="InvitationBody" />
    </property>
    <property name="Subject">
      <column name="Subject" />
    </property>
    <property name="SenderName">
      <column name="SenderName" />
    </property>
    <property name="FriendName">
      <column name="FriendName" />
    </property>
    <property name="SenderEmail">
      <column name="SenderEmail" />
    </property>
    <property name="FriendEmail">
      <column name="FriendEmail" />
    </property>
    <property name="SaveDate">
      <column name="SaveDate" />
    </property>
    <property name="Status">
      <column name="Status" />
    </property>
    <property name="MandrillId">
      <column name="MandrillId" />
    </property>
    <property name="MandrillSendDate">
      <column name="MandrillSendDate" />
    </property>
  </class>
</hibernate-mapping>

